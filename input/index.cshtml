@model Kentico.Kontent.Statiq.Memoirs.Models.HomeViewModel
@{
    ViewData["SiteMetadata"] = Model.Metadata;
    ViewData["IsHome"] = Model.Index == 1;
}
<div class="blog-grid-container">
    @foreach (var post in Model.Items)
    {
         await Html.RenderPartialAsync("postbox", post);
    }
</div>

<div class="bottompagination">
    <span class="navigation" role="navigation">
        @{ await Html.RenderPartialAsync("pagination"); }
    </span>
</div>